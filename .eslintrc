{
    "parser": "babel-eslint",
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "rules": {
        "eol-last": 0,
        "indent": ["error", 4],
        "require-jsdoc": ["error", {
            "require": {
                "FunctionDeclaration": false,
                "MethodDefinition": false,
                "ClassDeclaration": false,
                "ArrowFunctionExpression": false,
                "FunctionExpression": false
            }
        }],
        "keyword-spacing": [1, {"overrides": {
            "if": {"after": false},
            "for": {"after": false},
            "while": {"after": false}
        }}],
        "max-len": ["error", 180],
        "no-extra-semi": 0,
        "semi": 0,
        "operator-linebreak": 0,
        "func-call-spacing": 0,
        "comma-dangle": 0
    },
    "extends": [
        "eslint:recommended", "google"
    ]
}